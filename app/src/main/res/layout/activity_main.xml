<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Water Intake Input -->
    <EditText
        android:id="@+id/etWaterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter water intake in ml"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add" />

    <!-- Total Water Intake Display -->
    <TextView
        android:id="@+id/tvTotalIntake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Water Intake: 0 ml / Goal: 0 ml" />

    <!-- Water Intake List -->
    <TextView
        android:id="@+id/tvWaterIntakeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical"
        android:text="Water Intake List: " />

    <!-- Restart Button -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Restart" />

    <!-- Goal Input -->
    <EditText
        android:id="@+id/etGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your daily goal (ml)"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSetGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set Goal" />

</LinearLayout>
